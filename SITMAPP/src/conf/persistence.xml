<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SITMAPPPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>sitmapp.entity.Articulado</class>
    <class>sitmapp.entity.Empresa</class>
    <class>sitmapp.entity.Usuario</class>
    <class>sitmapp.entity.Ruta</class>
    <class>sitmapp.entity.Parada</class>
    <class>sitmapp.entity.Noticia</class>
    <class>sitmapp.entity.Historialconductor</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3308/sitmapp?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="manuponton"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="adminponton"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
